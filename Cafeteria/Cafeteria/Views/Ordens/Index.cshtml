@model IEnumerable<Cafeteria.Models.Orden>

@{
    ViewBag.Title = "Index";
}


<h2>Ordenes</h2>
<p>
    @Html.ActionLink("Nueva Orden", "Create",null,new { @class=" btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            Nombre del producto
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estatus)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.product.NombreP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estatus)
            </td>
            <td>
                
                @Html.ActionLink("Edit", "Edit", new { id = item.IdOrden },new{ @class = "btn fas fa-edit" }) |
                @Html.ActionLink("Details", "Details", new { id = item.IdOrden },new { @class=" fas fa-info-circle"}) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IdOrden}, new { @class = " fas fa-trash" })
            </td>
        </tr>
    }

</table>
